{
    "compilerOptions": {
      "target": "ES2020",                      // Target JavaScript version
      "module": "CommonJS",                   // Use CommonJS modules
      "rootDir": "./src",                     // Root directory for TypeScript files
      "outDir": "./dist",                     // Output directory for compiled JavaScript files
      "strict": true,                         // Enable strict type checking
      "esModuleInterop": true,                // Enable compatibility with CommonJS and ES modules
      "forceConsistentCasingInFileNames": true, // Enforce consistent casing
      "skipLibCheck": true,                   // Skip type checking of declaration files
      "moduleResolution": "node",            // Use Node module resolution
      "resolveJsonModule": true,              // Support importing JSON files
      "types": ["node"],                      // Include Node.js type definitions
      "lib": ["ES2020", "DOM"]                // Include modern JavaScript and DOM APIs
    },
    "include": ["src/**/*"],                  // Include all TypeScript files in the src folder
    "exclude": ["node_modules", "dist"]       // Exclude node_modules and the dist folder
  }
  